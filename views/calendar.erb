<table border=3>
<% my_cal = @my_calendar.createMonth(2012,params[:selectMonth].to_i) %>
<% my_cal.each do |week| %>
<tr>
<%   week.each do |day_of_week| %>
<%p day_of_week %>
<%     if day_of_week == nil then %>
       	  <td><br></td>
<%     else %>
<%	if day_of_week == "Sun" then%>
	  <td class="<%=day_of_week %>"><%=day_of_week %></td>
<%      else %>
         <td><%= day_of_week %></td>
<%      end %>
<%     end %>
<%   end %>
</tr>
<% end %>
</table>
