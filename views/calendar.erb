<h2><%= "#{params[:selectMonth].to_i}æœˆ" %></h2>
<table border=3>
<% my_cal = @my_calendar.createMonth(2012,params[:selectMonth].to_i) %>
<tr>
<% @my_calendar.get_week.each_key do |key| %>
     <td class="<%= key %>"><%= key %></td>
<% end %>
</tr>
<% my_cal.each do |week| %>
<tr>
<%   week.each do |day_of_week| %>
<%     if day_of_week == nil then %>
       	  <td><br></td>
<%     else %>
       	  <td class="<%=day_of_week.strftime('%a')%>"><%= day_of_week.day %></td>
<%   end %>
<% end %>
</tr>
<% end %>
</table>
